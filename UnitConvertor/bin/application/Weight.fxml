<AnchorPane prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SaveController">
   <children>
      <VBox prefHeight="450.0" prefWidth="500.0">
         <children>
            <FlowPane prefHeight="450.0" prefWidth="500.0">
               <children>
                  <MenuButton mnemonicParsing="false" prefWidth="100.0" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" text="How to use" />
                        <MenuItem mnemonicParsing="false" text="Author" />
                     </items>
                  </MenuButton>
                  <Label prefHeight="32.0" prefWidth="349.0" text="                              Choose what co convert:" />
                  <Button mnemonicParsing="false" onAction="#changeToLength" prefWidth="100.0" text="Lenght">
                     <FlowPane.margin>
                        <Insets left="200.0" top="15.0" />
                     </FlowPane.margin>
                  </Button>
                  <MenuButton fx:id="firstunit" mnemonicParsing="false" onAction="#setFirstUnit" prefWidth="90.0" text="Unit">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="150.0" top="20.0" />
                     </FlowPane.margin>
                     <items>
                        <MenuItem mnemonicParsing="false" text="mg" />
                        <MenuItem mnemonicParsing="false" text="g" />
                        <MenuItem mnemonicParsing="false" text="dkg" />
                        <MenuItem mnemonicParsing="false" text="kg" />
                        <MenuItem mnemonicParsing="false" text="lb" />
                        <MenuItem mnemonicParsing="false" text="oz" />
                     </items>
                  </MenuButton>
                  <MenuButton fx:id="firstunit1" mnemonicParsing="false" onAction="#setSecondUnit" prefWidth="90.0" text="Unit">
                     <items>
                        <MenuItem mnemonicParsing="false" text="mg" />
                        <MenuItem mnemonicParsing="false" text="g" />
                        <MenuItem mnemonicParsing="false" text="dkg" />
                        <MenuItem mnemonicParsing="false" text="kg" />
                        <MenuItem mnemonicParsing="false" text="lb" />
                        <MenuItem mnemonicParsing="false" text="oz" />
                     </items>
                     <FlowPane.margin>
                        <Insets left="150.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </MenuButton>
                  <TextField fx:id="TextField1" prefHeight="100.0" prefWidth="190.0">
                     <FlowPane.margin>
                        <Insets left="10.0" />
                     </FlowPane.margin>
                  </TextField>
                  <Button mnemonicParsing="false" prefWidth="80.0" text="Convert">
                     <FlowPane.margin>
                        <Insets left="10.0" right="10.0" />
                     </FlowPane.margin>
                  </Button>
                  <TextField fx:id="TextField2" prefHeight="100.0" prefWidth="190.0">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
